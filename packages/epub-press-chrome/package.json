    "dependencies": {
        "bluebird": "^3.5.3",
        "epub-press-js": "^0.5.0",
        "jquery": "^3.5.0",
        "sanitize-filename": "^1.6.1"
    },
    "devDependencies": {
        "@babel/core": "^7.7.4",
        "@babel/plugin-transform-runtime": "^7.7.4",
        "@babel/preset-env": "^7.7.4",
        "@babel/runtime": "^7.7.4",
        "babel-loader": "^8.0.6",
